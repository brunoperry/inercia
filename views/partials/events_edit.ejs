<section id="events">
  <h2>EVENTOS</h2>
  <button class="event-add-button" aria-label="Add events">
    <svg width="100%" height="100%" viewBox="0 0 64 64" fill="var(--color-a)">
      <path
        d="M39.035,24.966l-0,-24.966l-14.069,0l-0,24.966l-24.966,-0l0,14.069l24.966,-0l-0,24.965l14.069,0l-0,-24.965l24.965,-0l0,-14.069l-24.965,-0Z"
      />
    </svg>
  </button>
  <div class="tabs">
    <div id="tab-a" class="tab-item">Demoparty</div>
    <div id="tab-b" class="tab-item">Momentum</div>
    <div id="tab-party" class="tab-content">
      <ul>
        <% events_data.demoparty.forEach((event) => { %>
        <li class="event-item" id="<%= event.id %>">
          <input type="hidden" id="is-event-active" value="<%= event.is_active %>" />
          <a href="<%= event.link %>" aria-label="idp 2022"><%= event.name %></a
          ><span class="<%= event.status %>"><%= event.status %></span>
          <div class="edit-container">
            <button class="delete-button" aria-label="Delete news">
              <svg width="100%" height="100%" viewBox="0 0 64 64" fill="var(--color-a)">
                <path
                  d="M39.035,24.966l-0,-24.966l-14.069,0l-0,24.966l-24.966,-0l0,14.069l24.966,-0l-0,24.965l14.069,0l-0,-24.965l24.965,-0l0,-14.069l-24.965,-0Z"
                />
              </svg>
            </button>

            <button class="update-button" aria-label="Edit news">
              <svg width="100%" height="100%" viewBox="0 0 64 64" fill="var(--color-a)">
                <path
                  d="M64,10.234l-10.234,-10.234l-46.552,46.553l10.233,10.233l46.553,-46.552Z"
                />
                <path d="M4.339,49.428l10.233,10.233l-14.572,4.339l4.339,-14.572Z" />
              </svg>
            </button>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
    <div id="tab-momentum" class="tab-content">
      <ul>
        <% events_data.momentum.forEach((event) => { %>
        <li class="event-item" id="<%= event.id %>">
          <input type="hidden" id="is-event-active" value="<%= event.is_active %>" />
          <a href="<%= event.link %>" aria-label="momentum"><%= event.name %></a
          ><span class="<%= event.status %>"><%= event.status %></span>
          <div class="edit-container">
            <button class="delete-button" aria-label="Delete news">
              <svg width="100%" height="100%" viewBox="0 0 64 64" fill="var(--color-a)">
                <path
                  d="M39.035,24.966l-0,-24.966l-14.069,0l-0,24.966l-24.966,-0l0,14.069l24.966,-0l-0,24.965l14.069,0l-0,-24.965l24.965,-0l0,-14.069l-24.965,-0Z"
                />
              </svg>
            </button>

            <button class="update-button" aria-label="Edit news">
              <svg width="100%" height="100%" viewBox="0 0 64 64" fill="var(--color-a)">
                <path
                  d="M64,10.234l-10.234,-10.234l-46.552,46.553l10.233,10.233l46.553,-46.552Z"
                />
                <path d="M4.339,49.428l10.233,10.233l-14.572,4.339l4.339,-14.572Z" />
              </svg>
            </button>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</section>
